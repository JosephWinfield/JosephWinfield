<!DOCTYPE html>
<html>
<head>
  <title>Joseph Winfield</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="wrapper">
    <header class="header">
        <h1 class="headline">
          <%= link_to 'Joseph Winfield', root_path %>
        </h1>
        <nav class="navigation">
          <ul>
            <li>
              <%= link_to 'Articles', root_path %>
            </li>
            <li>
              <%= link_to 'Photography', photos_path %>
            </li>
            <li>
              <%= link_to 'Biography', biography_path %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
              </li>
            <% end %>
          </ul>
        </nav>
    </header>

    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>

    <%= yield %>

  </div>
</body>
</html>
